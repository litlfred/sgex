{
  "name": "@sgex/dak-publication-api",
  "version": "1.0.0",
  "description": "OpenAPI-driven DAK Publication Services - WYSIWYG-first architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "validate-api": "swagger-codegen validate -i openapi.yaml",
    "generate-client": "swagger-codegen-cli generate -i openapi.yaml -l typescript-axios -o client/",
    "start-local": "node dist/server.js --port 3002",
    "integration-test": "npm run build && npm run start-local & sleep 5 && npm test && pkill -f 'node dist/server.js'"
  },
  "keywords": [
    "WHO",
    "SMART Guidelines", 
    "DAK",
    "publication",
    "WYSIWYG",
    "OpenAPI",
    "healthcare",
    "fhir"
  ],
  "author": "SGeX Workbench Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/litlfred/sgex.git",
    "directory": "services/dak-publication-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "swagger-codegen-cli": "^3.0.55"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "openapi.yaml",
    "integration-guide.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ]
  }
}