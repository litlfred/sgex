          }
        },
        "actorType": {
          "type": "string",
          "description": "Type of actor involved with this component",
          "x-valueset-binding": {
            "strength": "extensible",
            "valueSetUrl": "https://worldhealthorganization.github.io/smart-base/ValueSet-ActorType.schema.json"
          },
          "externalDocs": {
            "description": "Browse Actor Types ValueSet",
            "url": "https://worldhealthorganization.github.io/smart-base/ValueSet-ActorType.schema.json"
          }
        },
        "locale": {
          "type": "string",
          "description": "Language locale code",
          "default": "en"
        }
      },
      "required": ["repository", "componentType"]
    },
    "output": {
      "type": "object",
      "properties": {
        "structured": {
          "type": "object",
          "properties": {
            "componentType": { "type": "string" },
            "actorType": { "type": "string" },
            "componentCount": { "type": "number" },
            "componentDetails": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "path": { "type": "string" },
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "narrative": { "type": "string" },
        "errors": { "type": "array", "items": { "type": "string" } },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "meta": { "type": "object" }
      }
    }
  }
}