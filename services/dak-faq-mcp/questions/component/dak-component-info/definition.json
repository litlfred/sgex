    {
      "type": "ValueSet",
      "url": "https://worldhealthorganization.github.io/smart-base/ValueSet-ActorType.schema.json",
      "description": "Actor types for health workflows",
      "purpose": "parameter validation"
    }
  ],
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "GitHub repository in format 'user/repo' or local folder path"
        },
        "componentType": {
          "type": "string",
          "description": "Type of DAK component to analyze",
