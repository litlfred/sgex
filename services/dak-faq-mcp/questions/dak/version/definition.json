{
  "id": "dak-version",
  "level": "dak",
  "title": "dak.faq.version.title",
  "description": "dak.faq.version.description",
  "parameters": [
    {
      "name": "repository",
      "type": "string",
      "required": true,
      "description": "dak.faq.params.repository"
    },
    {
      "name": "locale",
      "type": "string",
      "required": false,
      "description": "dak.faq.params.locale",
      "default": "en"
    }
  ],
  "tags": ["dak", "metadata", "version"],
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "GitHub repository in format 'user/repo' or local folder path"
        },
        "locale": {
          "type": "string",
          "description": "Language locale code",
          "default": "en"
        }
      },
      "required": ["repository"]
    },
    "output": {
      "type": "object",
      "properties": {
        "structured": {
          "type": "object",
          "properties": {
            "version": { 
              "type": "string",
              "description": "DAK version number"
            },
            "status": { 
              "type": "string",
              "description": "Publication status of the DAK",
              "enum": ["draft", "active", "retired", "unknown"],
              "x-canonical-url": "https://worldhealthorganization.github.io/smart-base/ValueSet-PublicationStatus.schema.json",
              "x-canonical-note": "Aligns with FHIR PublicationStatus ValueSet"
            },
            "releaseDate": { 
              "type": "string",
              "description": "Release date in ISO 8601 format"
            },
            "name": { 
              "type": "string",
              "description": "DAK name"
            },
            "id": { 
              "type": "string",
              "description": "DAK identifier"
            }
          }
        },
        "narrative": { "type": "string" },
        "errors": { "type": "array", "items": { "type": "string" } },
        "warnings": { "type": "array", "items": { "type": "string" } },
        "meta": { "type": "object" }
      }
    }
  }
}